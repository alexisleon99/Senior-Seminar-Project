<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<div class="container">
    <% if flash[:index]%>
    <div class="notice">
        <%= flash[:index]%>
    </div>
    <% end %>
</div>

<div class="col-lg-12 text-center">
  <h1 class="mt-5"> Payment Manager</h1>
</div>

<h2 class="mt-5"> Travel Form</h2>
  <table>

  <tbody>
    <% @travel_forms.each do |travel_form| %>
    <div>
      <tr>
      <td> Travel form </td>
        <td><%= travel_form.id %></td>
        <td><%= travel_form.status %></td>
        <td><%= link_to 'Review Travel Form', travel_form %></td>
      </tr>
    </div>
    <%end%>
  </tbody>
</table>
<h2 class="mt-5"> Expense Reports </h2>
<table>
    <tbody>
    <% @expense_reports.each do |expense_report| %>
      <tr>
        <td> Expense Form </td>
        <td><%= expense_report.id %></td>
        <td><%= expense_report.status %></td>
        <td><%= link_to 'Review Expense Report', expense_report %></td>
        <td><%= button_to "Approve", approve_expense_report_path(expense_report.id), method: :patch %></td>
        <td><%= button_to "Denied", denied_expense_report_path(expense_report.id), method: :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<%= link_to 'Edit', edit_payment_manager_path(@payment_manager) %> |
<%= link_to 'Back', payment_manager_path %>
