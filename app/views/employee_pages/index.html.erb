<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<%= content_tag :div,
    id: "payment"  do %>

    <%= javascript_pack_tag 'payment' %>
<% end %>


<p id="notice"><%= notice %></p>

<h1>Employee Pages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_pages.each do |employee_page| %>
      <tr>
        <td><%= link_to 'Show', employee_page %></td>
        <td><%= link_to 'Edit', edit_employee_page_path(employee_page) %></td>
        <td><%= link_to 'Destroy', employee_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee Page', new_employee_page_path %>
