<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<%= content_tag :div,
    id: "employee"  do %>

    <%= javascript_pack_tag 'employee' %>
<% end %>


<p id="notice"><%= notice %></p>

<h1 aligin="center">List of employees</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_pages.each do |employee_page| %>
      <div class="employee_pages-body">
      </div>
      <tr></br></br>
        <%= link_to 'Show', employee_page, class: "btn-group btn-primary btn-sm"  %>
        <%= link_to 'Edit', edit_employee_page_path(employee_page), class: "btn-group btn-sm btn-info" %>
        <%= link_to 'Destroy', employee_page, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-group btn-sm btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee Page', new_employee_page_path, class: "btn btn-xs btn-success" %>
