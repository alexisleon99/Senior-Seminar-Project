<p id="notice"><%= notice %></p>
<div class="col-lg-12 text-center">
  <h1 class="mt-5"> Budget Approver Page</h1>
</div>

<div>
  <h1 class="mt-5"> Budget: </h1>
  <% @departments.each do |department| %>
    <% if current_account.department_id == department.id %>
    <td><%= department.budget %></td>
    <% end %>
   <% end %>
</div>
<h2 class="mt-5"> Travel Form</h2>
  <table>

  <tbody>

      <% @request_forms.each do |request_form| %>
        <% if request_form.departments_id == current_account.department_id%>
        <% if request_form.status != "Approved"%>
        <td> Request Forms </td>
        <td><%= request_form.travel_form_id %></td>
        <td><%= request_form.status %></td>
        <% if request_form.status == "pending"%>
          <td><%= button_to "Approve", approve_request_form_path(request_form.id), method: :patch %></td>
          <td><%= button_to "Deny", denied_request_form_path(request_form.id), method: :patch%></td>
        <% end %>
         <td><%= link_to 'Review Request Form', request_form %></td>
        <% end %>
        <% @travel_forms.each do |travel_form| %>
          <tr>
          <% if request_form.travel_form_id == travel_form.id%>
          <% if travel_form.status != "Approved"%>
          <td> Travel Forms </td>
          <td><%= travel_form.id %></td>
          <td><%= travel_form.status %></td>
          <td><%= link_to 'Show', travel_form %></td>
          </tr>
          <%end%>
        <% end %>

      </tr>
    <% end %>
    <% end %>
    <% end %>
      </tr>
    </div>

  </tbody>
</table>
<h2 class="mt-5"> Expense Reports </h2>
<table>
    <tbody>
    <% @expense_reports.each do |expense_report| %>
      <tr>
        <td> Expense Form </td>
        <td><%= expense_report.id %></td>
        <td><%= expense_report.status %></td>
        <td><%= link_to 'Review Expense Report', expense_report %></td>
        <td><%= link_to 'Edit', edit_request_form_path(expense_report.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


