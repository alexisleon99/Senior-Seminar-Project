<p id="notice"><%= notice %></p>
<div class="col-lg-12 text-center">
  <h1 class="mt-5"> Employee Travel and Expense Forms</h1>
</div>

<h2 class="mt-5"> Travel Form</h2>
  <table>
    
    <td>Travel form</td>
    <td>ID</td>
    <td>status</td>

  <tbody>
    <% @travel_forms.each do |travel_form| %>
      <%if travel_form.account_id == current_account.id%>
    <div>
      <tr>
      <td> Travel form </td>
        <td><%= travel_form.id %></td>
        <td><%= travel_form.status %></td>
        <td><%= travel_form.count %></td>
        <td><%= link_to 'Review Travel Form', travel_form %></td>
        <%if travel_form.status == "Denied"%>
          <td><%= link_to 'Resubmit', edit_travel_form_path(travel_form.id) %></td>
        <% end %>
        <%if travel_form.status == "Approved"%>
          <td><%= link_to 'New Expense Report', new_expense_report_path %></td>
        <% end %>
      <tr>
      <% @request_forms.each do |request_form| %>
      <% if request_form.travel_form_id == travel_form.id%>
        <td> Request Form </td>
        <td><%= request_form.travel_form_id %></td>
        <td><%= request_form.status %></td>
        <%if request_form.status == "Denied"%>
          <td><%= link_to 'Resubmit', edit_request_form_path(request_form.id) %></td>
        <% end %>
      </tr>
    <% end %>
    <%end%>
      </tr>
    </div>
    <%end%>
    <% end %>
  </tbody>
</table>
<table>
  <td><%= link_to 'New Travel Form', new_travel_form_path %></td>
</table>


<h2 class="mt-5"> Expense Reports </h2>
<table>
    <tbody>
    <% @expense_reports.each do |expense_report| %>
      <tr>
        <td> Expense Form </td>
        <td><%= expense_report.id %></td>
        <td><%= expense_report.status %></td>
        <td><%= link_to 'Review Expense Report', expense_report %></td>
        <%if expense_report.status == "Denied"%>
          <td><%= link_to 'Resubmit', edit_expense_report_path(expense_report.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



