<p id="notice"><%= notice %></p>

<h1>Expense Reports</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Department</th>
      <th>Flight</th>
      <th>Hotel</th>
      <th>Mileage</th>
      <th>Transportation</th>
      <th>Other</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_reports.each do |expense_report| %>
      <tr>
        <td><%= expense_report.First_name %></td>
        <td><%= expense_report.Last_Name %></td>
        <td><%= expense_report.Department %></td>
        <td><%= expense_report.Flight %></td>
        <td><%= expense_report.Hotel %></td>
        <td><%= expense_report.Mileage %></td>
        <td><%= expense_report.Transportation %></td>
        <td><%= expense_report.Other %></td>
        <td><%= expense_report.image_url %></td>
        <td><%= link_to 'Show', expense_report %></td>
        <td><%= link_to 'Edit', edit_expense_report_path(expense_report) %></td>
        <td><%= link_to 'Destroy', expense_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense Report', new_expense_report_path %>
